@{
    ViewData["Title"] = "Register Employee";
}

<h1>Create</h1>

<h4>Servico</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddEmployee">
            <input type="hidden" asp-for="ID" />
            <input type="hidden" asp-for="Nome" />
            <input type="hidden" asp-for="ClienteID" />
            <input type="hidden" asp-for="DiaHora" />
            <input type="hidden" asp-for="Valor" />
            <input type="hidden" asp-for="Tipo" />
            <input type="hidden" asp-for="TipoManutencao" />
