@model GelaBahia.Models.Servico

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Servico</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ID" />
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ClienteID" class="control-label"></label>
                <select asp-items="ViewBag.ClienteID" asp-for="ClienteID" class="form-control">
                    <option value="">-- Selecione o Tipo --</option>
                </select>
                <span asp-validation-for="ClienteID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DiaHora" class="control-label"></label>
                <input asp-for="DiaHora" class="form-control" />
                <span asp-validation-for="DiaHora" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Valor" class="control-label"></label>
                <input asp-for="Valor" class="form-control" />
                <span asp-validation-for="Valor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Tipo" class="control-label"></label>
                <select onload="funcao()" onchange="funcao()" id="ddlTipo" asp-for="Tipo" class="form-control">
                    <option value="">-- Selecione o Tipo --</option>
                    <option value="Instalacao">Instalação</option>
                    <option value="Manutencao">Manutenção</option>
                </select>
                <span asp-validation-for="Tipo" class="text-danger"></span>
            </div>
            <div type="hidden" class="form-group">
                <label asp-for="TipoManutencao" class="control-label"></label>
                <select disabled id="ddlTipoManutencao" asp-for="TipoManutencao" class="form-control">
                    <option value="">-- Selecione o Tipo --</option>
                    <option value="Gas">Gás</option>
                    <option value="Limpeza">Limpeza</option>
                </select>
                <span asp-validation-for="TipoManutencao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<script type="text/javascript">
    document.onload(funcao())
    function funcao() {
        var ddl = document.getElementById('ddlTipo').value;
        if (ddl == "Manutencao") {
            document.getElementById('ddlTipoManutencao').disabled = false;
        } else {
            document.getElementById('ddlTipoManutencao').disabled = true;
        }
    }
</script>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
